generator client {
  provider = "prisma-client-js"
  output = "../../../node_modules/@prisma/client/auth" 
  // Custom output to avoid conflicts in monorepo if needed, 
  // or we just rely on standard path but unique client instances.
  // Ideally in monorepo, we generate client into node_modules/@prisma-clients/auth
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}
